  <input name="contact[email]" type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" >
</div>
<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Contacts</label>
  <textarea name="contact[contact]" class="form-control" id="exampleFormControlTextarea1" rows="3" value=""></textarea>
</div>
  <br/>
  <button type="submit" class="btn btn-primary">Send</button>

</form>
